<% @movies.each do |movie| %>
<div class="">


<img src="<%= movie["image"]%>" alt="">
<p><em> <%= movie["name"]%> </em> </p>
<p> <%= movie["year"]%>  </p>
<p>Director: <%= movie["director"]%></p>
<p>Cast: <%= movie["cast"]%></p>

<form class="button" action="/movie/edit/<%= movie["id"]%>" method="post">
  <button type="submit" >Edit</button>
</form>
<form class="button" action="/movie/delete/<%= movie["id"]%>" method="post">
  <button type="submit" >Delete</button>
</form>

<form class="button" action="/movie/addtolist/<%= movie["id"]%>" method="post">
  <button type="submit" >Add to a list</button>
</form>


</div>
<% end%>
