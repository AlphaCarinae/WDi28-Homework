<h1>Edit Student</h1>

<form action="/students/<%= @students['id'] %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" value="<%= @students['name'] %>" placeholder="Student name" required autofocus>
  <label>Family Name:</label>
  <input type="text" name="family" value="<%= @students['family'] %>" placeholder="Family name" required>
  <label>Image:</label>
  <input type="url" name="image" value="<%= @students['image'] %>" placeholder="http://...">

  <button>Update</button>
</form>
