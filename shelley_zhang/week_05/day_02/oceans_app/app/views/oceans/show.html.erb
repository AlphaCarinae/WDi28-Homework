<h1><%= @ocean.name %></h1>

<table align="center">
  <thead>
    <tr>
      <td>Name</td>
      <td>Surface</td>
      <td>Depth</td>
      <td>Volume</td>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @ocean.name %></td>
      <td><%= number_to_human @ocean.surface %></td>
      <td><%= number_with_precision(@ocean.depth, precision: 0) %></td>
      <td><%= number_to_human @ocean.volume %></td>
    </tr>
  </tbody>
</table>

<br/>

<%= image_tag @ocean.image, :class => 'feature' unless @ocean.image.nil?%>

<div class="controls">
  <%= button_to 'Edit Ocean', ocean_edit_path(@ocean.id), :class => "buttonTo" , :method => 'get' %>
  <%= button_to 'Delete Ocean', ocean_path(@ocean.id), :class => "buttonTo", :method => 'delete' %>
</div>
