<div class="title"><h1>Edit Rock</h1></div>

<form action="<%= rocks_path(@rock.id) %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" value="<%= @rock.name %>" required>
  <label>Image:</label>
  <input type="url" name="image" value="<%= @rock.image %>" placeholder="https://..." required>
  <label>Colour:</label>
  <input type="text" name="colour" value="<%= @rock.colour %>">
  <label>Density:</label>
  <input type="number" name="density" step=any value="<%= @rock.density %>">
  <label>Composition:</label>
  <input type="number" name="composition" step=any value="<%= @rock.composition%>">
  <label>Locality:</label>
  <input type="text" name="locality" value="<%= @rock.locality %>">
  <button>Add Rock</button>
</form>
