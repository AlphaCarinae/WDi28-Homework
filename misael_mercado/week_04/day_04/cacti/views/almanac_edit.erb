<h1>Edit Almanac</h1>

<form action="/almanac/<%= @cacti['id'] %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" value="<%= @cacti['name'] %>" placeholder="Cacti name" required autofocus>
  <label>Family:</label>
  <input type="text" name="family" value="<%= @cacti['family'] %>" placeholder="Family name" required>
  <label>Image:</label>
  <input type="url" name="image" value="<%= @cacti['image'] %>" placeholder="http://...">

  <button class="btn">Update</button>
</form>
