
<h1>Edit Pizza</h1>

<form action="/pizzas/<%= @pizza['id'] %>/edit" method="post">
  <label>Name:</label>
  <input type="text" name="name" value="<%= @pizza['name'] %>" required autofocus><br/>
  <label>Vegetarian:</label>
  <input type="checkbox" name="vegetarian" <%= @pizza['vegetarian'] == 1 ? "checked" : "" %>>
  <label>Price:$</label>
  <input type="number" step="0.01" name="price" value="<%= @pizza['price'] %>" required><br/>

  <button>Update</button>
</form>
