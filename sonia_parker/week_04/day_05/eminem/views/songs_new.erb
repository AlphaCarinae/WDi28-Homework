<h1>New Song</h1>
<form action="/songs" method="post">
  <label>Name</label>
  <input type="text" name="name" placeholder="Song Name" required autofocus>
  <label>youtube Url</label>
  <input type="url" name="youtube_url" required placeholder="https://">

  <label>Choose Album</label>
  <select  name="album_id">
    <option></option>
    <% Album.all.each do |album| %>
    <option value ="<%= album.id %>"><%= album.name %> </option>
    <% end %>
  </select>

  <button>Create</button>
  </select>
</form>
