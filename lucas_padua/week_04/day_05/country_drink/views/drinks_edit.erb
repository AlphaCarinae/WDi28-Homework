<h1>Edit drink</h1>

<form action="/drinks/<%= @drink.id %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" value="<%= @drink.name %>" placeholder="drink name" required autofocus>
  <label>Image:</label>
  <input type="url" name="image" value="<%= @drink.image %>" placeholder="http://...">

  <button>Update</button>
</form>
