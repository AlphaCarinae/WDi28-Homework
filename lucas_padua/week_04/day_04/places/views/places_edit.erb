<h1>Edit Places</h1>

<form action="/places/<%= @place['id'] %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" value="<%= @place['name'] %>" placeholder="Place name" required autofocus>
  <label>Location: ;-)</label>
  <input type="text" name="location" value="<%= @place['location'] %>" placeholder="Location name" required>
  <label>Image:</label>
  <input type="url" name="image" value="<%= @place['image'] %>" placeholder="http://...">

  <button>Update</button>
</form>
