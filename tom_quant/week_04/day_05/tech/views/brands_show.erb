


<h2><%= @brands.name%></h2>

<img src="<%= @brands.logo%>" alt="">


<% unless @brands.earphones.empty? %>
  <h2>Earphones:</h2>
  <ul>
    <% @brands.earphones.each do |item| %>
      <li>
        <a href="/earphones/<%= item.id %>">
          <%= item.name %>
        </a>
      </li>
    <% end %>
  </ul>
<% end %>







<a href="/brands/<%=@brands["id"]%>/edit">EDIT BRAND</a>

