<h1>Edit Mountain</h1>

<form action="<%= mountain_update_path(@mountain.id) %>" method="post">

  <label>Name:</label>
  <input type="text" name="name" value="<%= @mountain.name %>" required autofocus placeholder="Mountain Name" />

  <label>Height:</label>
  <input type="float" name="height" value="<%= @mountain.height %>" required placeholder="Height in Meters">

  <label>Is it Volcanic?</label>
  <input type="boolean" name="volcanic" value="<%= @mountain.volcanic %>" placeholder="">

  <label>Image:</label>
  <input type="url" name="image" value="<%= @mountain.image %>" placeholder="https://...">

  <button>Update Mountain</button>
</form>
