<h1>Records are always a Sound Purchase</h1>

<h1><%= @album['name'] %></h1>
<h2>Year: <%= @album['year'] %></h2>

<% unless @album.artist.nil? %>
  <h2>
    Artist:
    <a href="/artists/<%= @album.artist.id %>">
      <%= @album.artist.name %>
    </a>
  </h2>
<% end %>

<% unless @album.image.nil? %>
  <img class="feature" src="<%= @artist['image'] %>" />
<% end %>

<div class="controls">
  <a href="/albums/<%= @album['id'] %>/edit">Edit</a>
  <a href="/albums/<%= @album['id'] %>/delete">Delete</a>
</div>
