<h1>Edit Mt. <%= @m.name %></h1>

<%= form_tag(mountain_path(@m.id), method: "post") do %>
  <label for="name">Name:</label>
  <input type="text" id="name" name="name" value="<%= @m.name %>" required autofocus>
  <label for="height">Height:</label>
  <input type="number" id="height" name="height" value="<%= @m.height %>">
  <label for="image">Image URL:</label>
  <input type="url" id="image" name="image" value="<%= @m.image %>">
  <label for="latitude">Latitude:</label>
  <input type="number" id="latitude" name="latitude" step="any" value="<%= @m.latitude %>">
  <label for="longitude">Longitude:</label>
  <input type="number" id="longitude" name="longitude" step="any" value="<%= @m.longitude %>">
  <button type="submit">Save</button>
<% end %>