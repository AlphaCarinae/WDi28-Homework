<%= form_for @animal do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name  %>

  <%= f.label :breed %>
  <%= f.text_field :breed %>

  <%= f.label :dob %>
  <%= f.text_field :dob %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :vaccinated %>
  <%= f.check_box :vaccinated %>

  <%= f.label :shelter_id %>
  <%= f.select :shelter_id, Shelter.pluck(:name, :id), :include_blank => true %>

  <%= f.submit %>
<% end %>