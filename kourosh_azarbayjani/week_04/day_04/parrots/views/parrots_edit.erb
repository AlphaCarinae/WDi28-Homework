<h1>Edit Parrot</h1>

<form action="/parrots/<%= @Parrot['id'] %>" method="post">
  <label>Name:</label>
  <input type="text" name="name" value="<%= @parrot['name'] %>" placeholder="Parrot name" required autofocus>
  <label>Scientific Name:</label>
  <input type="text" name="scientific name" value="<%= @parrot['scientific name'] %>" placeholder="Scientific name" required>
  <label>Image:</label>
  <input type="url" name="image" value="<%= @parrot['image'] %>" placeholder="http://...">

  <button>Update</button>
</form>
